<UserControl x:Class="PhotoBooth_App.Keyboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhotoBooth_App"
             mc:Ignorable="d" Height="230" Width="220">
    <Grid>
        <UniformGrid Columns="3" Rows="4" Margin="2">
            <Button Content="7" Width="60" Height="45" FontSize="15" Click="Button_Click" />
            <Button Content="8" Width="60" Height="45" FontSize="15"  Click="Button_Click" />
            <Button Content="9" Width="60" Height="45" FontSize="15" Click="Button_Click" />
            <Button Content="4" Width="60" Height="45" FontSize="15" Click="Button_Click" />
            <Button Content="5" Width="60" Height="45" FontSize="15" Click="Button_Click" />
            <Button Content="6" Width="60" Height="45" FontSize="15" Click="Button_Click" />
            <Button Content="1" Width="60" Height="45" FontSize="15" Click="Button_Click"/>
            <Button Content="2" Width="60" Height="45" FontSize="15" Click="Button_Click" />
            <Button Content="3" Width="60" Height="45" FontSize="15" Click="Button_Click" />
            <Button Content="0" Width="60" Height="45" FontSize="15" Grid.ColumnSpan="2" Click="Button_Click" />
            <Button Content="{DynamicResource DeleteButton_Text}" Width="60" Height="45" FontSize="15" Background="Red" Foreground="White" Click="Delete_CLick" />
            <Button Content="ABC" Width="60" Height="45" FontSize="15" Background="Gray" Foreground="White" Click="Change_Click"/>
        </UniformGrid>

    </Grid>
</UserControl>
