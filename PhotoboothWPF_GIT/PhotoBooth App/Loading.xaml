<Window x:Class="PhotoBooth_App.Loading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Width="300" Height="150"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Border Background="White" CornerRadius="20" SnapsToDevicePixels="True">

        <Grid>
            <Border Background="White" Padding="20" CornerRadius="10" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel HorizontalAlignment="Center">
                    <ProgressBar Width="300" Height="20" Foreground="Green" IsIndeterminate="True" />
                    <TextBlock Text="Đang xử lí..." HorizontalAlignment="Center" FontWeight="Bold" Margin="10,10,10,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>