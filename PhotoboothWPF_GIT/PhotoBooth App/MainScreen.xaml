<Window x:Class="PhotoBooth_App.MainScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoBooth_App"
        mc:Ignorable="d"
        Title="" Height="450" Width="800" WindowStartupLocation="CenterScreen" WindowState="Maximized" ResizeMode="NoResize"  Background="#F7F8FA">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/image/background2.jpg" Stretch="UniformToFill" />
        </Grid.Background>

        <Border Background="White" CornerRadius="10" Width="350" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="20">
            <StackPanel>
                <Image Source="/image/logo_camera1.png" Width="50" Height="50" HorizontalAlignment="Center" Margin="0,10,0,15"/>

                <!-- Title -->
                <TextBlock Text="AI PhotoBooth" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <!-- Subtitle -->
                <TextBlock Text="Click vào nút start để bắt đầu" FontSize="14" Foreground="Gray" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- start -->
                <Button  Content="Start" Width="300" Height="40" Background="#0B0D22" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,10" Click="Start_Btn_Click" />

            </StackPanel>
        </Border>
    </Grid>
</Window>