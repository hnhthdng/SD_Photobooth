<UserControl x:Class="PhotoBooth_App.KeyboardText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhotoBooth_App"
             mc:Ignorable="d" 
         d:DesignHeight="250" d:DesignWidth="440">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Q" Width="35" Height="35" FontSize="15" Margin="3" Click="Key_Click"/>
                <Button Content="W" Width="35" Height="35" FontSize="15" Margin="3" Click="Key_Click"/>
                <Button Content="E" Width="35" Height="35" FontSize="15" Margin="3" Click="Key_Click"/>
                <Button Content="R" Width="35" Height="35" FontSize="15" Margin="3" Click="Key_Click"/>
                <Button Content="T" Width="35" Height="35" FontSize="15" Margin="3" Click="Key_Click"/>
                <Button Content="Y" Width="35" Height="35" FontSize="15" Margin="3" Click="Key_Click"/>
                <Button Content="U" Width="35" Height="35" FontSize="15" Margin="3" Click="Key_Click"/>
                <Button Content="I" Width="35" Height="35" FontSize="15" Margin="3" Click="Key_Click"/>
                <Button Content="O" Width="35" Height="35" FontSize="15" Margin="3" Click="Key_Click"/>
                <Button Content="P" Width="35" Height="35" FontSize="15" Margin="3" Click="Key_Click"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="A" Width="35" Height="35" FontSize="15" Margin="3" Click="Key_Click"/>
                <Button Content="S" Width="35" Height="35" FontSize="15" Margin="3" Click="Key_Click"/>
                <Button Content="D" Width="35" Height="35" FontSize="15" Margin="3" Click="Key_Click"/>
                <Button Content="F" Width="35" Height="35" FontSize="15" Margin="3" Click="Key_Click"/>
                <Button Content="G" Width="35" Height="35" FontSize="15" Margin="3" Click="Key_Click"/>
                <Button Content="H" Width="35" Height="35" FontSize="15" Margin="3" Click="Key_Click"/>
                <Button Content="J" Width="35" Height="35" FontSize="15" Margin="3" Click="Key_Click"/>
                <Button Content="K" Width="35" Height="35" FontSize="15" Margin="3" Click="Key_Click"/>
                <Button Content="L" Width="35" Height="35" FontSize="15" Margin="3" Click="Key_Click"/>
                <Button Content="@" Width="35" Height="35" FontSize="15" Margin="3" Click="Key_Click"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Z" Width="35" Height="35" FontSize="15" Margin="3" Click="Key_Click"/>
                <Button Content="X" Width="35" Height="35" FontSize="15" Margin="3" Click="Key_Click"/>
                <Button Content="C" Width="35" Height="35" FontSize="15" Margin="3" Click="Key_Click"/>
                <Button Content="V" Width="35" Height="35" FontSize="15" Margin="3" Click="Key_Click"/>
                <Button Content="B" Width="35" Height="35" FontSize="15" Margin="3" Click="Key_Click"/>
                <Button Content="N" Width="35" Height="35" FontSize="15" Margin="3" Click="Key_Click"/>
                <Button Content="M" Width="35" Height="35" FontSize="15" Margin="3" Click="Key_Click"/>
                <Button Content="." Width="35" Height="35" FontSize="15" Margin="3" Click="Key_Click"/>
                <Button Content="123" Width="50" Height="35" FontSize="15" Margin="3" Background="Gray" Foreground="White" Click="Change_Click"/>
                <Button Content="←" Width="50" Height="35" FontSize="15" Margin="3" Background="Red" Foreground="White" Click="Delete_CLick"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
